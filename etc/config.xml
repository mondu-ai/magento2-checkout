<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <mondu>
                <debug>1</debug>
                <active>0</active>
                <model>Mondu\Mondu\Model\Payment\Mondu</model>
                <!-- <model>CustomPaymentGatewayFacade</model> -->
                <mondu_key backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <order_status>pending</order_status>
                <payment_action>authorize</payment_action>
                <title>Mondu checkout</title>
                <description>The Mondu plugin makes it possible for merchants to offer a BNPL (Buy now, pay later) service to B2B customers. The Mondu BNPL option will be offered at checkout.</description>
                <currency>USD</currency>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_void>1</can_void>
                <can_use_checkout>1</can_use_checkout>
                <is_gateway>1</is_gateway>
                <debugReplaceKeys>MERCHANT_KEY</debugReplaceKeys>
                <paymentInfoKeys>FRAUD_MSG_LIST</paymentInfoKeys>
                <privateInfoKeys>FRAUD_MSG_LIST</privateInfoKeys>
            </mondu>
        </payment>
    </default>
</config>
