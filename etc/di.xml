<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Mondu\Mondu\Helpers\AdditionalCosts\AdditionalCostsInterface"
                type="Mondu\Mondu\Helpers\AdditionalCosts\AdditionalCosts"/>
    <preference for="Mondu\Mondu\Helpers\BuyerParams\BuyerParamsInterface"
                type="Mondu\Mondu\Helpers\BuyerParams\BuyerParams"/>
    <type name="Mondu\Mondu\Helpers\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Mondu\Mondu\Helpers\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">MONDU</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Mondu\Mondu\Helpers\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="log_listing_data_source_mondu"
                      xsi:type="string">Mondu\Mondu\Model\ResourceModel\Log\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <virtualType name="Mondu\Mondu\Model\ResourceModel\Log\Grid\Collection"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">mondu_transactions</argument>
            <argument name="resourceModel" xsi:type="string">Mondu\Mondu\Model\ResourceModel\Log</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\App\Request\CsrfValidator">
        <plugin name="mondu_csrf_validator_skip" type="Mondu\Mondu\Plugin\Magento\Framework\App\Request\CsrfValidator"/>
    </type>
    <type name="Magento\Payment\Helper\Data">
        <plugin name="mondu_filter_payment_methods" type="Mondu\Mondu\Plugin\Magento\Payment\Helper\Data"/>
    </type>
    <type name="Magento\Email\Model\Template">
        <plugin name="addTemplateVariable" type="Mondu\Mondu\Plugin\Magento\Email\Model\Template"/>
    </type>
</config>
